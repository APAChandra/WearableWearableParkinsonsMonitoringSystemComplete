<com.google.devrel.wcl.widgets.list.WearableListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <android.support.wearable.view.CircledImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/wcl_list_circle_diameter_max"
        android:layout_height="@dimen/wcl_list_circle_diameter_max"
        app:circle_border_color="@color/wcl_list_circle_border_color"
        app:circle_border_width="@dimen/wcl_list_circle_border_width"
        app:circle_radius="@dimen/wcl_list_circle_radius"
        android:layout_margin="16dp" />
    <TextView
        android:id="@+id/text"
        android:gravity="center_vertical|left"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_height="match_parent"
        android:lineSpacingExtra="-4sp"
        style="@style/WCLList"/>
</com.google.devrel.wcl.widgets.list.WearableListItemLayout>